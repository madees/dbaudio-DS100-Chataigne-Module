{
	"name": "d&b DS100 OSC Control",
	"type": "OSC",
	"path": "Hardware",
	
	"version": "1.2.0",
	"description": "Module to control sound objects with the d&b DS100 OSC command API. Visit https://www.dbsoundscape.com/ to learn more about d&b Soundscape and DS100, especially download the TI501 'd&b Soundscape System design and operation' and DS100 OSC protocol white paper.",
	"url": "https://github.com/madees/dbaudio-DS100-Chataigne-Module",
	"downloadURL": "https://github.com/madees/dbaudio-DS100-Chataigne-Module/archive/master.zip",
	
	"hasInput": true,
	"hasOutput": true, 
	"hideDefaultCommands": false,
	"hideDefaultParameters": [
		"autoRange",
		"autoFeedback",
		"pass_through",
		"input",
		"outputs"
	],
	
	"defaults": {
		"autoAdd": false,
		"oscInput": {
			"localPort": 50011
		},
		"OSC Outputs": {
			"OSC Output": {
				"local": false,
				"remoteHost": "192.168.1.100",
				"remotePort": 50010
			}
		}
	},
	
	"parameters": {
		"Update Rate": {
			"description":"Automatically get the module containers values updated from device. Rate by second, default is 20 Hz (50ms interval).",
			"type": "Integer",
			"default": 20,
			"min":1,
			"max":50
		},
		"Get SoundObjects": {
			"description":"Update automatically SoundObjects container values",
			"type": "Boolean",
			"default":false
		},
		"Get Scenes": {
			"description":"Update automatically Scenes container values",
			"type": "Boolean",
			"default":false
		},
		"Get EnSpace": {
			"description":"Update automatically EnSpace container values",
			"type": "Boolean",
			"default":false
		},
		"Default Coordinate Mapping": {
			"description":"Set global sound object DS100 coordinate mapping area, if its value is 0",
			"type": "Integer",
			"default": 1,
			"min": 1,
			"max": 4
		}
	},
	
	"scripts": [
		"DS100-osc.js"
	],
	
	"values": {
		"DS100 Device status":
		{
			"type":"Container",

			"Click to update all":
			{
				"type":"Trigger",
				"description":"Those field won't update automatically, press this button to retrieve actual status if needed"
			},
			"Device Name":
			{
				"type":"String",
				"description":"DS100 name, as specified in R1 project"
			},
			"Serial Number":
			{
				"type":"String",
				"description":"DS100 device serial"
			},
			"Is there anybody out there":
			{
				"type":"Boolean",
				"description":"Check if a device is there to answer to OSC commands"
			},
			"Error":
			{
				"type":"Boolean",
				"description":"Something wrong happens with DS100"
			},
			"Error text":
			{
				"type":"String",
				"description":"What's wrong"
			}
		},
		"Scenes":
		{
			"type":"Container",

			"Scene Index":
			{
				"type":"String",
				"description":"Actual scene index is two integers split by a dot"
			},
			"Scene Name":
			{
				"type":"String",
				"description":"As specified in R1"
			},
			"Scene Comment":
			{
				"type":"String",
				"description":"As specified in R1"
			}
		},
		"EnSpace": 
		{
			"type":"Container",

			"RoomID":
			{
				"type":"Integer",
				"description":"Room selector (0:Off, 1: Modern Small, 2: Classic Small, 3: Modern Medium, 4: Classic Medium, 5: Modern Large, 6: Classic Large, 7: Modern Medium, 8: Theater Small, 9: Cathedral)",
				"min":0,
				"max":9
			},
			"Room Description":
			{
				"type":"String"
			},
			"Predelay Factor":
			{
				"type":"Float",
				"description":"",
				"min":0.2,
				"max":2
			},
			"Rear Level":
			{
				"type":"Float",
				"description":"",
				"min":-24,
				"max":24
			}
		}
	},
	
	"commands": 
	{
		"deviceClear":
		{
			"menu":"",
			"callback":"deviceClear",
			"parameters":
			{
			}
		},

		"masterOutputLevel":
		{
			"menu":"",
			"callback":"masterOutputLevel",
			"parameters":
			{
				"Level":
				{
					"type":"Float",
					"min":-120,
					"max":24
				}
			}
		},

		"reverbRoomId":
		{
			"menu":"EnSpace",
			"callback":"reverbRoomId",
			"parameters":
			{
				"RoomId":
				{
					"type":"Integer",
					"min":0,
					"max":9
				}
			}
		},

		"preDelayFactor":
		{
			"menu":"EnSpace",
			"callback":"preDelayFactor",
			"parameters":
			{
				"Factor":
				{
					"type":"Float",
					"min":0.2,
					"max":2
				}
			}
		},

		"rearLevel":
		{
			"menu":"EnSpace",
			"callback":"rearLevel",
			"parameters":
			{
				"Rear level":
				{
					"type":"Float",
					"min":-24,
					"max":24
				}
			}
		},
		
		"nextScene":
		{
			"menu":"Scenes",
			"callback":"nextScene",
			"parameters":
			{
			}
		},
			
		"previousScene":
		{
			"menu":"Scenes",
			"callback":"previousScene",
			"parameters":
			{
			}
		},
		
		"sceneRecall":
		{
			"menu":"Scenes",
			"callback":"sceneRecall",
			"parameters":
			{
				"Major index":
				{
					"type":"Integer",
					"min":0,
					"max":999
				},
				"Minor index":
				{	"type":"Integer",
					"min":0,
					"max":99
				}
			}
		},
		
		"sourceSpread":
		{
			"menu":"Sound Objects",
			"callback":"sourceSpread",
			"parameters":
			{
				"Object":
				{
					"type":"Integer",
					"min":1,
					"max":64
				},
				"Spread":
				{
					"type":"Float",
					"min":0,
					"max":1
				}
			}
		},

		"sourceDelayMode":
		{
			"menu":"Sound Objects",
			"callback":"sourceDelayMode",
			"parameters":
			{
				"Object":
				{
					"type":"Integer",
					"min":1,
					"max":64
				},
				"Delay Mode":
				{
					"type":"Enum",
					"options":
					{
						"Off":0,
						"Tight":1,
						"Full":2
					}
				}
			}
		},

		"coordinateMappingSourcePositionXY":
		{
			"menu":"Sound Objects",
			"callback":"coordinateMappingSourcePositionXY",
			"parameters":
			{
				"Mapping":
				{
					"type":"Integer",
					"min":0,
					"max":4
				},
				"Object":
				{
					"type":"Integer",
					"min":1,
					"max":64
				},
				"Position":
				{
					"type":"Point2D",
					"min":[0,0],
					"max":[1,1]
				}	
			}
		},

		"coordinateMappingSourcePosition2DCartesian":
		{
			"menu":"Sound Objects",
			"callback":"coordinateMappingSourcePosition2DCartesian",
			"parameters":
			{
				"Mapping":
				{
					"type":"Integer",
					"min":0,
					"max":4
				},
				"Object":
				{
					"type":"Integer",
					"min":1,
					"max":64
				},
				"Position":
				{
					"type":"Point2D",
					"min":[-1,-1],
					"max":[1,1]
				}	
			}
		},

		"coordinateMappingSourcePosition2DPolar":
		{
			"menu":"Sound Objects",
			"callback":"coordinateMappingSourcePosition2DPolar",
			"parameters":
			{
				"Mapping":
				{
					"type":"Integer",
					"min":0,
					"max":4
				},
				"Object":
				{
					"type":"Integer",
					"min":1,
					"max":64
				},
				"Azimuth":
				{
					"type":"Float",
					"min":0,
					"max":1
				},
				"Distance":
				{
					"type":"Float",
					"min":0,
					"max":1
				}
			}
		},
		
		"reverbSendGain":
		{
			"menu":"Sound Objects",
			"callback":"reverbSendGain",
			"parameters":
			{
				"Object":
				{
					"type":"Integer",
					"min":1,
					"max":64
				},
				"Send gain dB":
				{
					"type":"Float",
					"min":-120,
					"max":24
				}
			}
		},

		"matrixInputGain":
		{
			"menu":"Sound Objects",
			"callback":"matrixInputGain",
			"parameters":
			{
				"Object":
				{
					"type":"Integer",
					"min":1,
					"max":64
				},
				"Gain dB":
				{
					"type":"Float",
					"min":-120,
					"max":24
				}
			}
		},
		"matrixInputMute":
		{
			"menu":"Sound Objects",
			"callback":"matrixInputMute",
			"parameters":
			{
				"Mute":
				{
					"type":"Boolean"
				}
			}
		}
	}
}